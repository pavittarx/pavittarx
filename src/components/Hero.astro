---
import { Image } from "astro:assets";
import logo from "../assets/pavittarx-logo.svg";
import background from "../assets/background.svg";
---

<section
  class="relative isolate overflow-hidden bg-white min-h-[90vh] flex items-center justify-center"
>
  <!-- Background Image -->
  <img
    src={background.src}
    alt=""
    class="absolute inset-0 -z-10 h-full w-full object-cover opacity-30"
  />

  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center animate-fade-in-up">
      <div
        class="flex justify-center mb-8 hover:scale-105 transition-transform duration-300"
      >
        <Image
          src={logo}
          alt="Pavittarx Logo"
          class="h-28 w-auto drop-shadow-xl"
        />
      </div>

      <h1
        class="text-5xl font-bold tracking-tight text-gray-900 sm:text-7xl mb-6"
      >
        <span class="block text-gray-600 text-3xl sm:text-4xl font-medium mb-2"
          >Hey there, I'm</span
        >
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-[#2575FC] via-indigo-600 to-purple-600"
        >
          Pavittar
        </span>
      </h1>

      <p class="mt-6 text-lg leading-8 text-gray-600 max-w-xl mx-auto">
        Senior Software Engineer based in India. I architect scalable backends,
        optimize cloud infrastructure, and build robust web applications with a
        focus on performance and user experience.
      </p>

      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="#projects"
          class="rounded-full bg-[#2575FC] px-8 py-3.5 text-sm font-semibold text-white shadow-lg hover:bg-blue-600 hover:shadow-blue-500/30 transition-all duration-300 hover:-translate-y-1 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
        >
          View Projects
        </a>
        <a
          href="#contact"
          class="text-sm font-semibold leading-6 text-gray-900 hover:text-[#2575FC] transition-colors flex items-center gap-2 group"
        >
          Contact Me <span
            aria-hidden="true"
            class="group-hover:translate-x-1 transition-transform">â†’</span
          >
        </a>
      </div>

      <div class="mt-12 flex justify-center gap-8">
        <a
          href="https://github.com/pavittarx"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-[#2575FC] transition-all duration-300 hover:scale-110"
        >
          <span class="sr-only">GitHub</span>
          <svg
            class="h-7 w-7"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
        <a
          href="https://linkedin.com/in/pavittarx"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-400 hover:text-[#0077b5] transition-all duration-300 hover:scale-110"
        >
          <span class="sr-only">LinkedIn</span>
          <svg
            class="h-7 w-7"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
        <a
          href="mailto:pavittarx@gmail.com"
          class="text-gray-400 hover:text-[#EA4335] transition-all duration-300 hover:scale-110"
        >
          <span class="sr-only">Email</span>
          <svg
            class="h-7 w-7"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }
</style>
