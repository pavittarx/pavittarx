      </nav>

      <div
        class="mt-12 text-xs text-gray-600 flex gap-6 font-mono uppercase tracking-widest"
      >
        <div class="flex items-center gap-2">
          <div class="flex gap-1">
            <kbd
              class="px-1.5 py-0.5 bg-gray-800 rounded border border-gray-700 text-gray-400"
              >↑</kbd
            >
            <kbd
              class="px-1.5 py-0.5 bg-gray-800 rounded border border-gray-700 text-gray-400"
              >↓</kbd
            >
          </div>
          <span>Navigate</span>
        </div>
        <div class="flex items-center gap-2">
          <kbd
            class="px-1.5 py-0.5 bg-gray-800 rounded border border-gray-700 text-gray-400"
            >↵</kbd
          >
          <span>Select</span>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Sound effects using Web Audio API for zero-dependency
  const audioCtx = new (window.AudioContext ||
    (window as any).webkitAudioContext)();

  function playHoverSound() {
    if (audioCtx.state === "suspended") audioCtx.resume();
    const osc = audioCtx.createOscillator();
    const gainNode = audioCtx.createGain();

    osc.type = "sine";
    osc.frequency.setValueAtTime(440, audioCtx.currentTime);
    osc.frequency.exponentialRampToValueAtTime(
      880,
      audioCtx.currentTime + 0.05,
    );

    gainNode.gain.setValueAtTime(0.05, audioCtx.currentTime);
    gainNode.gain.exponentialRampToValueAtTime(
      0.001,
      audioCtx.currentTime + 0.05,
    );

    osc.connect(gainNode);
    gainNode.connect(audioCtx.destination);

    osc.start();
    osc.stop(audioCtx.currentTime + 0.05);
  }

  function playClickSound() {
    if (audioCtx.state === "suspended") audioCtx.resume();
    const osc = audioCtx.createOscillator();
    const gainNode = audioCtx.createGain();

    osc.type = "square";
    osc.frequency.setValueAtTime(880, audioCtx.currentTime);
    osc.frequency.exponentialRampToValueAtTime(220, audioCtx.currentTime + 0.1);

    gainNode.gain.setValueAtTime(0.05, audioCtx.currentTime);
    gainNode.gain.exponentialRampToValueAtTime(
      0.001,
      audioCtx.currentTime + 0.1,
    );

    osc.connect(gainNode);
    gainNode.connect(audioCtx.destination);

    osc.start();
    osc.stop(audioCtx.currentTime + 0.1);
  }

  const menuItems = document.querySelectorAll(".menu-item");
  let currentIndex = -1;

  function setActive(index: number) {
    menuItems.forEach((item, i) => {
      if (i === index) {
        (item as HTMLElement).focus();
        // Add visual active state if needed, though focus handles it
      }
    });
    currentIndex = index;
  }

  // Mouse interactions
  menuItems.forEach((item, index) => {
    item.addEventListener("mouseenter", () => {
      if (currentIndex !== index) {
        playHoverSound();
        currentIndex = index;
        (item as HTMLElement).focus();
      }
    });

    item.addEventListener("click", () => {
      playClickSound();
    });
  });

  // Keyboard interactions
  document.addEventListener("keydown", (e) => {
    if (e.key === "ArrowDown") {
      e.preventDefault();
      // If no item is selected, select the first one
      if (currentIndex === -1) {
        setActive(0);
      } else {
        const nextIndex = (currentIndex + 1) % menuItems.length;
        setActive(nextIndex);
      }
      playHoverSound();
    } else if (e.key === "ArrowUp") {
      e.preventDefault();
      // If no item is selected, select the last one
      if (currentIndex === -1) {
        setActive(menuItems.length - 1);
      } else {
        const prevIndex =
          (currentIndex - 1 + menuItems.length) % menuItems.length;
        setActive(prevIndex);
      }
      playHoverSound();
    } else if (e.key === "Enter") {
      if (currentIndex !== -1) {
        playClickSound();
        // We don't need to prevent default here as we want the link to work
        // But we can manually trigger click if needed, though focus + Enter usually works for links
        // (menuItems[currentIndex] as HTMLAnchorElement).click();
      }
    }
  });
</script>
