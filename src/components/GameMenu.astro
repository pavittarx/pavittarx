    </div>

    <!-- Right: Menu Options -->
    <div class="flex flex-col gap-8 pl-0 lg:pl-12">
      <nav id="game-menu" class="flex flex-col gap-4">
        {
          menuItems.map((item, index) => (
            <a
              href={item.href}
              class="menu-item group relative px-8 py-5 text-2xl font-bold tracking-wider transition-all duration-200 hover:translate-x-4 focus:translate-x-4 focus:outline-none outline-none"
              data-index={index}
            >
              {/* Background hover effect */}
              <span class="absolute left-0 top-1/2 -translate-y-1/2 w-0 h-full bg-gradient-to-r from-[#2575FC]/20 to-transparent transition-all duration-200 group-hover:w-full group-focus:w-full -z-10 rounded-r-xl border-l-4 border-transparent group-hover:border-[#2575FC] group-focus:border-[#2575FC]" />

              <div class="flex items-center gap-4">
                <span class="text-gray-600 group-hover:text-[#2575FC] group-focus:text-[#2575FC] transition-colors font-mono text-lg">
                  0{index + 1}
                </span>
                <span class="text-gray-400 group-hover:text-white group-focus:text-white transition-colors">
