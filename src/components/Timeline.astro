---
const events = [
  {
    year: "2023",
    items: [
      {
        title: "Senior Frontend Developer",
        company: "Tech Corp",
        description:
          "Leading the frontend team in building scalable web applications using React and Astro.",
      },
      {
        title: "Open Source Contributor",
        company: "GitHub",
        description:
          "Contributed to major open source projects including Astro and Tailwind CSS.",
      },
    ],
  },
  {
    year: "2021",
    items: [
      {
        title: "Frontend Developer",
        company: "Creative Agency",
        description:
          "Developed responsive websites and interactive user interfaces for various clients.",
      },
    ],
  },
  {
    year: "2019",
    items: [
      {
        title: "Junior Web Developer",
        company: "StartUp Inc",
        description:
          "Collaborated with designers to implement pixel-perfect UI components.",
      },
      {
        title: "Freelance Developer",
        company: "Self-employed",
        description:
          "Built custom WordPress themes and plugins for small businesses.",
      },
    ],
  },
  {
    year: "2015",
    items: [
      {
        title: "Computer Science Degree",
        company: "University of Technology",
        description:
          "Bachelor's degree in Computer Science with a focus on software engineering.",
      },
    ],
  },
];
---

<section id="timeline" class="py-12 bg-white sm:py-16 lg:py-20">
  <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="mb-12">
      <h2 class="text-3xl font-bold leading-tight text-gray-900 sm:text-4xl">
        My Journey
      </h2>
      <p class="mt-4 text-base text-gray-500">
        A timeline of my professional and educational milestones.
      </p>
    </div>

    <div class="grid grid-cols-[80px_auto_1fr] gap-x-4 sm:gap-x-8 max-w-3xl">
      {
        events.map((group, groupIndex) => {
          const isLastGroup = groupIndex === events.length - 1;
          return (
            <>
              {/* Year Column */}
              <div class="text-right pt-1.5">
                <span class="text-lg font-bold text-[#2575FC]">
                  {group.year}
                </span>
              </div>

              {/* Line Column */}
              <div class="relative flex justify-center">
                {/* Vertical Line */}
                <div
                  class={`absolute top-0 w-px bg-gray-200 ${isLastGroup ? "h-4" : "bottom-0"}`}
                />

                {/* Dot */}
                <div class="relative z-10 w-3 h-3 bg-[#2575FC] rounded-full mt-2.5 ring-4 ring-white" />
              </div>

              {/* Content Column */}
              <div class="pb-10 space-y-8">
                {group.items.map((item) => (
                  <div>
                    <h3 class="text-lg font-bold text-gray-800">
                      {item.title}
                    </h3>
                    <p class="text-sm font-medium text-[#2575FC] mt-0.5">
                      {item.company}
                    </p>
                    <p class="mt-2 text-base text-gray-500 leading-relaxed">
                      {item.description}
                    </p>
                  </div>
                ))}
              </div>
            </>
          );
        })
      }
    </div>
  </div>
</section>
