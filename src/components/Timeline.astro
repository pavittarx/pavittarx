<script>
  const buttons = document.querySelectorAll(".filter-btn");
  const items = document.querySelectorAll(".timeline-item");
  const years = document.querySelectorAll("ol > li");

  buttons.forEach((btn) => {
    btn.addEventListener("click", () => {
      // Remove active class from all
      buttons.forEach((b) => {
        b.classList.remove(
          "bg-[#2575FC]",
          "text-white",
          "shadow-md",
          "hover:shadow-lg",
          "transform",
          "hover:-translate-y-0.5",
        );
        b.classList.add(
          "bg-white",
          "text-gray-600",
          "ring-1",
          "ring-gray-200",
          "hover:bg-gray-50",
          "hover:ring-gray-300",
        );
      });

      // Add active class to clicked
      btn.classList.remove(
        "bg-white",
        "text-gray-600",
        "ring-1",
        "ring-gray-200",
        "hover:bg-gray-50",
        "hover:ring-gray-300",
      );
      btn.classList.add(
        "bg-[#2575FC]",
        "text-white",
        "shadow-md",
        "hover:shadow-lg",
        "transform",
        "hover:-translate-y-0.5",
      );

      const filter = (btn as HTMLElement).dataset.filter;

      items.forEach((item) => {
        if (
          filter === "all" ||
          (item as HTMLElement).dataset.category === filter
        ) {
          (item as HTMLElement).style.display = "block";
        } else {
          (item as HTMLElement).style.display = "none";
        }
      });

      // Hide empty years
      years.forEach((year) => {
        const children = Array.from(year.querySelectorAll(".timeline-item"));
        const hasVisible = children.some(
          (child) => (child as HTMLElement).style.display !== "none",
        );
        (year as HTMLElement).style.display = hasVisible ? "block" : "none";
      });
    });
  });
</script>
