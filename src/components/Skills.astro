---
const skills = [
  {
    category: "Languages",
    items: ["TypeScript", "JavaScript", "Python", "SQL", "HTML/CSS"],
  },
  {
    category: "Frontend",
    items: ["React", "Next.js", "Astro", "Tailwind CSS", "Angular"],
  },
  {
    category: "Backend",
    items: ["Node.js", "NestJS", "Express", "tRPC", "Prisma"],
  },
  {
    category: "Database & Cloud",
    items: ["PostgreSQL", "MongoDB", "AWS", "Firebase", "Docker"],
  },
];
---

<section id="skills" class="py-24 relative overflow-hidden">
  <!-- Dynamic Background -->
  <div class="absolute inset-0 -z-10 h-full w-full bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)]"></div>
  
  <div class="px-6 mx-auto max-w-7xl lg:px-8">
    <div class="mx-auto max-w-2xl text-center mb-20">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        Tech Stack
      </h2>
      <p class="mt-4 text-lg leading-8 text-gray-600">
        My preferred weapons of choice for building digital products.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-10 max-w-5xl mx-auto">
      {
        skills.map((group) => (
          <div class="group relative bg-white rounded-2xl p-8 shadow-sm hover:shadow-2xl transition-all duration-500 border border-gray-100 overflow-hidden">
            <!-- Decorative Gradient Blob -->
            <div class="absolute top-0 right-0 -mr-16 -mt-16 w-32 h-32 rounded-full bg-blue-50 group-hover:bg-blue-100 transition-colors duration-500 blur-2xl opacity-50"></div>
            
            <div class="relative">
              <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-3">
                <span class="w-1.5 h-6 rounded-full bg-[#2575FC] group-hover:h-10 transition-all duration-300"></span>
                {group.category}
              </h3>
              
              <div class="flex flex-wrap gap-3">
                {group.items.map((skill) => (
                  <span class="px-4 py-2 text-sm font-semibold text-gray-600 bg-gray-50 rounded-lg border border-gray-100 
                  group-hover:border-blue-100 group-hover:bg-blue-50/50 group-hover:text-blue-700
                  hover:!bg-[#2575FC] hover:!text-white hover:!border-[#2575FC] hover:!scale-105
                  transition-all duration-300 cursor-default">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
