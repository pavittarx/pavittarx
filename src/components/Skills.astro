<section id="skills" class="py-16 relative overflow-hidden">
  <!-- Dynamic Background -->
  <div
    class="absolute inset-0 -z-10 h-full w-full bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)]"
  >
  </div>

  <div class="px-6 mx-auto max-w-7xl lg:px-8">
    <div class="mx-auto max-w-2xl text-center mb-12">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        Tech Stack
      </h2>
      <p class="mt-4 text-lg leading-8 text-gray-600">
        My preferred weapons of choice for building digital products.
      </p>
    </div>

    <div class="flex flex-col gap-12 max-w-4xl mx-auto">
      {
        skills.map((group) => (
          <div class="relative">
            <h3 class="text-lg font-semibold text-gray-400 mb-4 uppercase tracking-wider text-sm pl-1">
              {group.category}
            </h3>

            <div class="flex flex-wrap gap-3">
              {group.items.map((skill) => (
                <div class="group flex items-center gap-2 px-3 py-2 bg-white/50 hover:bg-white rounded-lg border border-gray-100 hover:border-blue-200 hover:shadow-sm transition-all duration-300 cursor-default">
                  <img
                    src={skill.icon}
                    alt={skill.name}
                    class="w-5 h-5 object-contain opacity-70 group-hover:opacity-100 transition-opacity duration-300"
                  />
                  <span class="text-sm font-medium text-gray-600 group-hover:text-gray-900">
                    {skill.name}
                  </span>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
